@model IDGS904_tema1.Models.Grados

@{
    ViewBag.Title = "Grados";
}

<h2>Calcular Grados</h2>
<form action="/Tienda/Temperatura" method="POST">
    <div class="col-md-4">
        <div class="mb-3">
            @Html.LabelFor(model => model.Grado,
            htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Grado,
               new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="mb-3">
            @Html.RadioButtonFor(model => model.Seleccionar, "Celsius", new { id = "Celsius" }) @Html.Label("Celsius", "Convertir a  Celsius")
            @Html.RadioButtonFor(model => model.Seleccionar, "Fahrenheit", new { id = "Fahrenheit" }) @Html.Label("Fahrenheit", "Convertir a Fahrenheit")
        </div>

        <button type="submit" class="w-100 btn ">Convertir</button>
        <hr />
        <p class="text-center">
            @TempData["Result"]
        </p>
    </div>
</form>