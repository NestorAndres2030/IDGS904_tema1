@model IDGS904_tema1.Models.Palabras

@{
    ViewBag.Title = "Buscar";
}

<h2>Buscar</h2>

<form action="/Palabras/BuscarPalabra" method="POST">
    <div class="col-md-4">
        <div class="mb-3">
            @Html.LabelFor(model => model.Palabra,
            htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Palabra,
               new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="mb-3">
            @Html.RadioButtonFor(model => model.Select, "espanol", new { id = "Espanol" }) @Html.Label("Espanol", "Traducir a Espanol")
            @Html.RadioButtonFor(model => model.Select, "ingles", new { id = "Ingles" }) @Html.Label("Ingles", "Traducir a Ingles")
        </div>

        <button type="submit" class="w-100 btn ">Traducir</button>
        <hr />

        <p class="text-center">

            <h1>La palabra es : @TempData["Result"] </h1>
        </p>
    </div>
</form>