@model IDGS904_tema1.Models.OperasBas

@{
    ViewBag.Title = "Calcular";
}

<h2>Calcular</h2>
<div class="container">
    <div class="row div col-lg-6">

        <form action="/" method="post">
            <label for="n1">Numero 1</label>
            <input type="number" name="Num1" value="" />
            <br />
            <label for="n2">Numero 2</label>
            <input type="number" name="Num2" value="" />
            <br />
            <input type="submit" name="Res" value="Calcular" />
            <h2>Selecciona Operacion:</h2>
            <label>
                Suma
                <input name="calcular" type="radio" value="suma" />
            </label>
            <label>
                Resta
                <input name="calcular" type="radio" value="resta" />
            </label>
            <label>
                Multiplicacion
                <input name="calcular" type="radio" value="multi" />
            </label>
            <label>
                Division
                <input name="calcular" type="radio" value="divic" />
            </label>
        </form>
    
    </div>
    <div class="row div col-lg-6">
        <h1>El resultado es :@Html.DisplayFor(model=>Model.Res)</h1>
    </div>
    </div>


